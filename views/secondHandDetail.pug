extends servicelayout

block styles
  link(rel="stylesheet" href="//g.alicdn.com/msui/sm/0.6.2/css/sm-extend.min.css")
  link(rel="stylesheet" href="../stylesheets/secondHandDetail.css")

block content
  div.page-group
    div.page.page-current#signup
      header.bar.bar-nav.back-blue
        a.button.button-link.button-nav.treehole-back.pull-left.external(href="/secondHand")
          span.icon.icon-left.text-white
        a.button.button-link.button-nav.treehole-back.pull-right.external
          span.icon.text-white
            i.iconfont-selfShare &#xe610;
        h1.title.text-white 详情

      div.content
        div(class="swiper-container index-swiper-container" data-space-between="10")
          div.swiper-wrapper
            each url, index in valuebles.picUrl
              div.swiper-slide
                img(src= url)
          div.swiper-pagination
            each url, index in valuebles.picUrl
            span.swiper-pagination-bullet
        each item, index in valuebles
          div.card.facebook-card
            div.card-content
              div.title-category
                span.content-title= item.name
                span.category= item.category
              div.card-content-text= item.desc
            div.card-footer
              div.icon.position
                i.iconfont-position &#xe619;
                span= item.location
              div.price= item.price
              
          div.card.facebook-card
            div.card-header.no-border
              div.facebook-avatar
                  img(src= item.authorAvatarUrl)
              div.card-info
                div
                  span.facebook-name= item.authorName
                  span.page-view 浏览次数：#{item.view}
                div.facebook-date
                  span= item.date
                  if item.authorSchool
                    span 来自[#{item.authorSchool}]
            div.connection-content
              span.icon.connection-icon
                i.iconfont-qq &#xe621;
              span.number= item.qq
              a.connection-action(href= "tencent://message/?"+ item.qq + "=1101101101&Site=&Menu=yes") qq勾搭
            div.connection-content
              span.icon.connection-icon
                i.iconfont-phone &#xe620;
              span.number= item.tel
              a.connection-action(href= "tel:" + item.tel) 电话勾搭
              a.connection-action(href="sms:" + item.tel) 短信勾搭
            


block scripts
  script(type='text/javascript' src='//g.alicdn.com/msui/sm/0.6.2/js/sm-extend.min.js' charset='utf-8')
  script(src='javascripts/index.js', type='text/javascript')
