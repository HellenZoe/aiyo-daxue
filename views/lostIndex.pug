block content
    div.page-group
        div.page.page-current.lost-page
            header.bar.bar-nav
                h1.title 失物
            nav.bar.bar-tab
                a.tab-item.external(href="/")
                    span.icon.icon-home
                    span.tab-label 主页
                a.tab-item.external(href="/lost/post")
                    span.icon.icon-edit
                    span.tab-label 发布
                a.tab-item.external(href="/lost/self")
                    span.icon.icon-me
                    span.tab-label 个人中心
                a.tab-item.external.create-actions
                    span.icon.icon-menu
                    span#menu_item.tab-label 失物
            div#lost.lostIndex-content
                div.buttons-tab.fixed-tab(data-offset='44')
                    a.tab-link.button.active(href="#tab-index-lost") 首页
                    a.tab-link.button(href="#tab-card-lost") 卡证
                    a.tab-link.button(href="#tab-ele-lost") 数码
                    a.tab-link.button(href="#tab-sport-lost") 运动
                    a.tab-link.button(href="#tab-other-lost") 其它
                div.content-block
                    div.tabs
                        div#tab-index-lost.tab.active
                            div.content-block
                                if goods
                                    each item in goods
                                        if item.type == "thing"
                                            a.linkWrapper.external(href= "/lost/detail/"+item._id)
                                                div.card.facebook-card(data-lId= item._id)
                                                    div.card-header.no-border
                                                        div.facebook-avatar
                                                            img(src= item.authorAvatarUrl)
                                                        div.card-info
                                                            div
                                                                span.facebook-name= item.authorName
                                                                span.page-view 浏览次数： #{item.view}
                                                            div.facebook-date
                                                                span= item.date
                                                                if item.authorSchool
                                                                    span 来自[#{item.authorSchool}]
                                                    div.card-content
                                                        div.picsWrapper
                                                            each url in item.picUrl
                                                                img(src= url)
                                                        div.title-category
                                                            span 失物
                                                            | &middot;
                                                            span.content-title= item.name
                                                            span.category= item.category_ch
                                                        div.card-content-text= item.desc
                                                    div.card-footer
                                                        div.icon.position
                                                            i.iconfont-position &#xe619;
                                                            span 丢失地点  #{item.location}
                                else
