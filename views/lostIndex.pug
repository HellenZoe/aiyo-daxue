extends layout

block styles
  link(href="./stylesheets/lostIndex.css" rel='stylesheet')

block content
  div.page-group
    div.page.page-current.lost-page
      //- header.bar.bar-nav.back-blue
      //-   a.button.button-link.button-nav.lostIndex-back.pull-left.external(href="/")
      //-     span.icon.icon-left
      //-   a.button.button-link.button-nav.lostIndex-back.pull-right.external
      //-     span.icon.text-white
      //-       i.iconfont-selfShare &#xe610;
      //-   h1.title.text-white 失物招领
      div.lost-tabs
        div.lost
          span.active
            a(href="#") 失物
        div.found
          span
            a(href="#") 招领
      nav.bar.bar-tab
        a.tab-item.external(href="/lost")
          span.icon.index-color
            i.iconfont-indexTabBar &#xe601;
          span.tab-label 主页
        a.tab-item.external(href="/lost/post")
          span.icon
            i.iconfont-treeHoleTabsBar &#xe603;
          span.tab-label 发布
        a.tab-item.external(href="/lost/self")
          span.icon
            i.iconfont-treeHoleTabsBar &#xe604;
          span.tab-label 个人中心
          
      div.bar.lostIndex-searchbar
        div.searchbar
          a.searchbar-cancel 取消
          div.search-input
            label.icon.icon-search(for="search")
            input#search(type="search", placeholder="搜索感兴趣的话题")
          a.gotoSearch.link(href="#search-page") 
      
      div.lostIndex-content
        div.buttons-tab
          a.tab-link.button.active(href="#tab-index") 首页
          a.tab-link.button(href="#tab-trans") 交通工具
          a.tab-link.button(href="#tab-sport") 运动健身
          a.tab-link.button(href="#tab-ele") 电子产品
          a.tab-link.button(href="#tab-eleEqui") 电器
          a.tab-link.button(href="#tab-beauty") 丽人美妆
          a.tab-link.button(href="#tab-other") 其他
          a.tab-link.button(href="#tab-eleEqui") 电器
        div.content-block
          div.tabs
            div#tab-index.tab.active
              div.content-block
                if goods
                  each item in goods
                    div.card.facebook-card(data-lId= item._id)
                      div.card-header.no-border
                        div.facebook-avatar
                            img(src= item.authorAvatarUrl)
                        div.card-info
                          div
                            span.facebook-name= item.authorName
                            span.page-view 浏览次数： #{item.view}
                          div.facebook-date
                            span= item.date
                            if item.school
                              span 来自[#{item.authorSchool}]
                      div.card-content
                        div.picsWrapper
                          each url in item.picUrl
                            img(src= url)
                        div.title-category
                          span.content-title= item.name
                          span.category= item.category
                        div.card-content-text= item.desc
                      div.card-footer
                        div.icon.position
                          i.iconfont-position &#xe619;
                          span= item.location
                else
                  div 什么都咩有
            div#tab-trans.tab
              div.content-block
                div 这里是交通工具
            div#tab-sport.tab
              div.content-block
                div 这是运动健身
            div#tab-ele.tab
              div.content-block
                div 这是电子产品
            div#tab-eleEqui.tab
              div.content-block
                div 这是电器
            div#tab-beauty.tab
              div.content-block
                div 这是丽人美妆
            div#tab-other.tab
              div.content-block
                div 这是其他

    div.page#search-page
      header.bar.bar-nav.back-blue
        a.button.button-link.button-nav.pull-left(href="#index")
          span.icon.icon-left
        h1.title.text-white 失物招领
      //- 在这里写搜索页面的内容    
      div.bar.bar-header-secondary.lostIndex-searchbar
        div.searchbar
          div.search-input
            label.icon.icon-search(for="search")
            input#search-action(type="search", placeholder="搜索感兴趣的话题")


block scripts
  script(src="./javascripts/lostIndex.js")  
