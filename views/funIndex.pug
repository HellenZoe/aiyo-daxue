      div.content.funIndex-content
        div(class="swiper-container" data-space-between="10")
          div.swiper-wrapper
            div.swiper-slide
              img(src="images/slide1.jpg")
            div.swiper-slide
              img(src="images/slide2.png")
            div.swiper-slide
              img(src="images/slide3.png")
