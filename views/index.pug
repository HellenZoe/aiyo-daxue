block content
  div.page-group
    div#page-infinite-scroll-bottom(class="page page-current")
      nav.bar.bar-tab
        a.tab-item.external(href='/')
          span.icon
            i.iconfont-indexTabBar &#xe601;
          span.tab-label 主页
        a.tab-item.external
          span.icon
            i.iconfont-indexTabBar &#xe600;
          span.tab-label 课表
        a.tab-item.external(href='/self')
          span.icon
            i.iconfont-indexTabBar &#xe602;
          span.tab-label 切换学校

      div.content
        div(class="swiper-container index-swiper-container" data-space-between="10")
          div.swiper-wrapper
            div.swiper-slide
              img(src="images/slide1.jpg")
            div.swiper-slide
              img(src="images/slide2.png")
            div.swiper-slide
              img(src="images/slide3.png")
          div.swiper-pagination
            span.swiper-pagination-bullet
            span.swiper-pagination-bullet
            span.swiper-pagination-bullet
        div.grid
          div.row#grid-row-01
            div.col-20
              a.more(href="#")
