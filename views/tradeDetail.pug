extends detaillayout

block styles
  link(rel="stylesheet" href="//g.alicdn.com/msui/sm/0.6.2/css/sm-extend.min.css")
  link(rel="stylesheet" href="../../stylesheets/tradeDetail.css")

block content
  div.page-group
    div.page.page-current#signup
      //- header.bar.bar-nav.back-blue
      //-   a.button.button-link.button-nav.treehole-back.pull-left.external(href="/trade")
      //-     span.icon.icon-left.text-white
      //-   a.button.button-link.button-nav.treehole-back.pull-right.external.action-collect(data-sId= seller._id) 收藏
      //-   h1.title.text-white 详情
      nav.bar.bar-tab
        a.tab-item.external(href="tel:" + seller.tel)
          span.icon
            i.iconfont-phone.color-blue &#xe620;
          span.tab-label 电话勾搭
        a.tab-item.external(href="sms:" + seller.tel)
          span.icon
            i.iconfont-selfComment.color-blue &#xe612;
          span.tab-label 短信勾搭
        a.tab-item.external(href="/trade/self")
          span.icon
            i.iconfont-qq.color-blue &#xe621;
          span.tab-label qq勾搭
      
      div.content
        div(class="swiper-container index-swiper-container" data-space-between="10")
          div.swiper-wrapper
            each url in seller.picUrl
              div.swiper-slide
                img(src= url)
          div.swiper-pagination
            each url in seller.picUrl
              span.swiper-pagination-bullet
        div.card.facebook-card
          div.card-content
            div.title-category
              span.content-title= seller.name
              span.category= seller.category_ch
            div.icon.collect
              i.iconfont-selfEnjoy &#xe611;              
              span 收藏人数: #{seller.collectUserId.length}
          div.card-footer
            div.icon.position
              i.iconfont-position &#xe619;
              span 地址#{seller.address}

        div.advertisement
            span= seller.advertisement       
        if singletons
          div.singletons
            h3.singleton-title  商品信息
            each item in singletons
              div.card.facebook-card
                div.card-header.no-border
                  div.facebook-avatar                
                    img(src= item.picUrl[0])
                  div.facebook-name.singleton-name= item.name
                  div.facebook-date.singleton-price= item.price
block scripts
  script(type='text/javascript' src='//g.alicdn.com/msui/sm/0.6.2/js/sm-extend.min.js' charset='utf-8')
  script(src='../../javascripts/index.js', type='text/javascript')
  script(src='../../javascripts/tradeDetail.js')
